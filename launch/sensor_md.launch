<launch>
    <node pkg="djiros" type="djiros_node" name="djiros" output="screen" launch-prefix="">
        <!-- node parameters -->
        <param name="serial_name" type="string" value="/dev/ttyUSB0" />
        <param name="baud_rate" type="int" value="921600" />
        <param name="A3_or_M100" type="int" value="0" />
        <param name="app_id" type="int" value="1033186" />
        <param name="app_version" type="int" value="1" />
        <param name="enc_key" type="string" value="6bf8f5b7c2ee22e2b331828b537545615297ac07ed56d8df3e886873edc3ff96" />
        <param name="only_broadcast" type="bool" value="false" />
        <param name="align_with_fmu" type="bool" value="false" />
    </node>

    <node pkg="vicon" type="vicon" name="vicon" output="screen">
        <param name="vicon_server" value="vicon-server"/>
        <param name="calib_files_dir" value="$(find vicon)/calib"/>
    </node>

    <node pkg="vicon_odom" type="vicon_odom" name="vicon_odom" output="screen">
        <param name="child_frame_id" type="string" value="world"/>
        <param name="publish_tf" type="bool" value="false"/>
        <param name="vicon_fps" type="int" value="200"/>
        <remap from="~vicon_subject" to="/vicon/TianboSDK"/>
        <remap from="~odom" to="/vicon/odom"/>
    </node>

</launch>
